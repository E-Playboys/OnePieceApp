@model OnePiece.Web.Data.Entities.Media
@{
  ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<h4>Media</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Url" class="control-label"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Width" class="control-label"></label>
        <input asp-for="Width" class="form-control" />
        <span asp-validation-for="Width" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Height" class="control-label"></label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" class="form-control" asp-items="ViewBag.MediaTypeSelectList"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Quality" class="control-label"></label>
        <select asp-for="Quality" class="form-control" asp-items="ViewBag.MediaQualitySelectList"></select>
        <span asp-validation-for="Quality" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="MangaId" class="control-label"></label>
        <select asp-for="MangaId" class="form-control" asp-items="ViewBag.MangaSelectList">
          <option value="">Please Select</option>
        </select>
      </div>
      <div class="form-group">
        <label asp-for="AnimeId" class="control-label"></label>
        <select asp-for="AnimeId" class="form-control" asp-items="ViewBag.AnimeSelectList">
          <option value="">Please Select</option>
        </select>
      </div>
      <div class="form-group">
        <label asp-for="NewsFeedId" class="control-label"></label>
        <select asp-for="NewsFeedId" class="form-control" asp-items="ViewBag.NewsFeedSelectList">
          <option value="">Please Select</option>
        </select>
      </div>
      <input type="hidden" asp-for="Id" />
      <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
      </div>
    </form>
  </div>
</div>
<div>
  <a asp-action="Index">Back to List</a>
</div>
