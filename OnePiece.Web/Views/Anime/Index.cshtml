@model IEnumerable<OnePiece.Web.Data.Entities.Anime>
@{
  ViewData["Title"] = "Index";
}
<h2>Index</h2>
<p>
  <a asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.EpisodeNumber)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Title)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.TitleEng)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Description)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.DescriptionEng)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.ImdbScore)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Rating)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.ViewCount)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Type)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Season)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.EpisodeNumber)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.TitleEng)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.DescriptionEng)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ImdbScore)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ViewCount)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Season.Id)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
